/*

.Pricing
  __hero
  __title
  __message
  __options
  __option

.Plan
    --recommended
  __icon
  __model
  __features
  __callToAction
    --primary

 */
body#pricing-page
  background color-grey

.App--dragging *
  cursor -webkit-grabbing !important
  cursor -moz-grabbing !important

.Pricing
  max-width 900px
  padding 2rem 2rem 5rem
  margin 60px auto 0
  text-align center
  font-size .8rem
  min-width 700px

  &__hero
    margin 5em 0 7em

  &__title
    font-size 3em

  &__options
    display table
    width 100%
    background color-white
    border-radius 3px
    z(1)

  &__option
    display table-cell
    position relative
    width 25%
    border-right 1px solid color-grey
    border-collapse collapse

    &:last-of-type
      border-right 0

.Plan
  padding 2em
  height 100%
  position relative
  background-color transparent
  top 0
  left 0

  &--recommended
    bannerHeight = 40px

    position absolute
    top (- bannerHeight / 2)
    left -1px
    height "calc(%s - -100%)" % bannerHeight
    width calc(2px - -100%)
    padding-top "calc(%s - -2em)" % bannerHeight
    background color-green
    color color-white
    z(2)
    transition:
      top ease-in-out 200ms,
      left ease-in-out 200ms,
      padding-top ease-in-out 200ms,
      height ease-in-out 200ms,
      background-color ease-in-out 200ms,
      color ease-in-out 200ms
    border-radius 3px

    &:before
      content "Recommended"
      display block
      position absolute
      top 0
      left 0
      width 100%
      line-height bannerHeight
      border-radius 3px 3px 0 0
      height bannerHeight
      text-transform uppercase
      color color-darkGreen
      font-weight 900

  &--recommended &
    &__callToAction--primary
      background color-white
      color color-green

  &__icon
    font-size 6em
    display block
    padding .2em 0

  &__name
    text-transform uppercase
    font-family inherit
    font-size 1em
    line-height 1.4em
    font-weight bold

  &__callToAction
    display block
    width 100%
    padding 1.2em 0
    border-radius 2em
    line-height 1
    font-size 1.2em
    font-weight 400

    border 0
    margin-top 1em
    //box-shadow inset 0 0 0 rgba(0, 0, 0, .2), 0 2px 2px rgba(0, 0, 0, .2)
    z(1, 100ms)
    background color-darkGreen
    color color-white
    outline none

    &>div
      font-size .8em
      margin-top .2em

    &:hover
      z(2)

    &:active
      transition box-shadow ease-in 40ms
      z(-1, 40ms)

    &--primary
          background color-green
          color color-black

.Slider
  cursor pointer
  font-size 30px
  height .2em
  border-radius .1em
  width 100%
  margin 2em 0
  position relative
  background color-darkGrey
  z(-.5)

  &__handle
    cursor -webkit-grab
    cursor -moz-grab
    height 1em
    width 1em
    border-radius .5em
    position absolute
    background color-green
    left 0
    top 0
    margin-left -.4em
    margin-top -.4em
    z(1)

  &__label
    position absolute
    bottom 100%
    margin-bottom 1em
    line-height 1.8em
    left 0

    font-size 1rem
    width 100%
    font-weight 900
    text-align center
    color color-darkGreen

    &:after
      content " "
      display block
      position absolute
      left 50%
      top 100%
      margin-left -6px
      width 0
      border-top 6px solid color-darkGreen
      border-left 6px solid transparent
      border-right 6px solid transparent

.Form
  
  &--error &
    &__feedback
      display block
      background color-lightError
      color color-error

  &__clearFix
    clear both
    display block

  &__title
    text-transform uppercase
    font-weight 900
    font-size 1.2rem
    padding 0 .413em
    
  &__subtitle
    display block
    font-size 1rem
    font-weight 100
    font-style italic

  &__group
    width calc(100% - 1em)
    display inline-block
    float left
    background color
    position relative
    line-height 4em
    margin 1em .5em 0
    
    &:first-child
      margin-top 0
    
    &--half
      width calc(50% - 1em)
      
    &--quarter
      width calc(25% - 1em)
      
  &__feedback
    display none
    padding 0 1em
    border-radius 2px
    
  &__input
    border none
    width 100%
    height 4em
    position absolute
    left 0
    top 0
    background transparent
    outline none
    padding 0 1em
    border-radius 4px
    
    &:focus
      background white
      border 2px solid color-grey
      padding 0 calc(1em - 2px)
    
  &__label
    text-transform uppercase
    display block
    width 100%
    padding 0 1em
    background-color color-grey
    border-radius 2px
    
    &--hidden
      color transparent
